{% extends 'base.html.twig' %}

{% block body %}

    <h2 class="page-header">ToDos List</h2>

    {% if todos %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ToDo</th>
                    <th>Due Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% set ix = 0 %}
                {% for todo in todos %}
                <tr>
                    {% set ix = ix + 1 %}
                    <th scope="row">{{ ix }}</th>
                    <td>{{ todo.name }}</td>
                    <td>{{ todo.dateDue|date('F j, Y, g:i a') }}</td>
                    <td>
                        <a href="/details/{{ todo.id }}" class="btn btn-success">View</a>
                        <a href="/edit/{{ todo.id }}" class="btn btn-default">Edit</a>
                        <a href="/delete/{{ todo.id }}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No ToDos!</p>
    {% endif %}
    <a href="/create" class="btn btn-primary">Create ToDo</a>

{% endblock %}