{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <a href="/" class="btn btn-default">Back to ToDo List</a>
    <br />
    <h2 class="page-header">{{ todo.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Due: <strong>{{ todo.dateDue|date('F j, Y, g:i a') }}</strong></li>
        <li class="list-group-item">Priority: <strong>{{ todo.priority.name }}</strong></li>
        <li class="list-group-item">Category: {{ todo.category.name }}</li>
    </ul>
    <p>{{ todo.description }}</p><br />
{% endblock %}

{% block javascripts %}{% endblock %}
